          div(class="card card-body")
            form(id="form-story-reply" action="story/reply" method="post")
              input(type="hidden" name="id" value=story._id)
              div(class="form-group")
                label(for="reply-content") Reply to this story
                textarea(class="form-control form-control-sm" id="reply-content" name="content" placeholder="Once upon a time...") 
              div(class="form-group")
                label(for="reply-username") Share your name
                input(type="text" class="form-control form-control-sm" id="reply-username" name="username" placeholder="Batman")
              button(type="submit" class="btn btn-primary btn-round") Reply