        div(class="row")
          div(class="col-md-6")
            h3= story.title
            h5 by #{story.username}
            p #{story.content}
          if story.pic
            div(class="col-md-6")
              div(class="image-container" style="background-image: url(img/uploads/" + story.pic + ")") 
        div(class="row")
          div(class="col-md-2")
            form(id="form-story-like" action="story/like" method="post")
              input(type="hidden" name="id" value=story._id)
              button(type="submit" class="btn btn-neutral btn-icon") 
